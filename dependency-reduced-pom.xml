<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.gridgain.training</groupId>
  <artifactId>ignite-essentials-developer-training</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <release>11</release>
          <source>11</source>
          <target>11</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>core</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <filters>
                <filter>
                  <artifact>${project.groupId}:${project.artifactId}</artifact>
                  <excludes>
                    <exclude>training/ComputeApp*</exclude>
                    <exclude>training/KeyValueApp.class</exclude>
                    <exclude>training/model/*</exclude>
                  </excludes>
                </filter>
              </filters>
              <outputFile>${project.basedir}/libs/core.jar</outputFile>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>apps</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <finalName>apps</finalName>
              <outputFile>${project.basedir}/libs/apps.jar</outputFile>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>GridGain External Repository</id>
      <url>https://www.gridgainsystems.com/nexus/content/repositories/external</url>
    </repository>
    <repository>
      <id>gridgain_ea</id>
      <url>https://gridgainsystems.com/nexus/content/repositories/external-ea/</url>
    </repository>
  </repositories>
  <properties>
    <maven.compiler.target>11</maven.compiler.target>
    <maven.compiler.source>11</maven.compiler.source>
    <ignite.version>9.0.0-beta2</ignite.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <ignite.project>org.gridgain</ignite.project>
  </properties>
</project>
